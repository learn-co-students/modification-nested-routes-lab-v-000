<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  Artist name: <%= @artist.name if @artist %>
  <%= artist_select(@song, @artist) %>
  <br />

  <%= f.submit %>
<% end %>

