<%= form_for @song  do |f| %>
  <= f.hidden_field :artist_id %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <% if @artist.nil? %>
    <%= artist_select(@artist, @song) %>
  <% end %>


  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.submit %>
<% end %>
