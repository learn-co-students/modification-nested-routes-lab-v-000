<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :artist_name if :artist_id.nil? %>
  <%= f.text_field :artist_name if :artist_id.nil? %>
  <%= f.hidden_field :artist_id %>
  <%= artist_select(@song, params[:artist_id]) %>
  <br />
  
  <%= f.submit %>
<% end %>
