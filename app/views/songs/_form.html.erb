<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, required: true %><br><br>
  <%= f.label "Select an artist: " %>
  <%= artist_select(@song.artist, @song) %><br><br>
  <%= f.label "Or create a new one:" %><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br><br>
  <%= f.submit %>
<% end %>